package array;

public class diamondpattern {
	public static void main(String[] args) {
		int i, j, row = 6;       
int n=row;
		for (i=0; i<row; i++)   
		{    
		for (j=row-i; j>=0; j--)         
		{  
		      
		System.out.print(" ");   
		}   
		  
		for (j=0; j<=i; j++ )   
		{   
		 
		System.out.print("* ");   
		}   
		 
		System.out.println();   
		}   
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<=i;j++)
			{	
				System.out.print(" ");	
			}
			for(int k=i;k<n;k++)
			{	
				System.out.print("* ");	
			}
			System.out.println("");
		}
			
	}

}
