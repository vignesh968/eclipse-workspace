package array;

public class diamondpattern {
	public static void main(String[] args) {
		int i, j, row = 6;       
		int s=row-1;
		for (i=1; i<=row; i++)   
		{    
		for (j=0; j<s; j++)         
		{  
		      
		System.out.print(" ");   
		}   
		  s--;
		for (j=1; j<=2*i-1; j++ )   
		{   
		 
		System.out.print("*");   
		}   
		 
		System.out.println();   
		}   
		s=1;
		for (i=1; i<=row; i++)   
		{    
		for (j=1; j<s; j++)         
		{  
		      
		System.out.print(" ");   
		}   
		  s++;
		for (j=0; j<=2*(row-i); j++ )   
		{   
		 
		System.out.print("*");   
		}   
		 
		System.out.println();   
		}   

			
	}

}
